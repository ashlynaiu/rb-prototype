<div class="slds-hide" id="modal">
 <div aria-hidden="false" role="dialog" class="slds-modal slds-fade-in-open">
    <div class="slds-modal__container">
      <div class="slds-modal__header">
        <h2 class="slds-text-heading--medium" id="modal-header">Modal Header</h2>
        <button class="slds-button slds-modal__close modal-action" data-modal-target = "close-modal">
          <svg aria-hidden="true" class="slds-button__icon slds-button__icon--inverse slds-button__icon--large">
            <use xlink:href="/assets/icons/action-sprite/svg/symbols.svg#close"></use>
          </svg>
          <span class="slds-assistive-text">Close</span>
        </button>
      </div>
      <div class="slds-modal__content" id="modal-content">
      </div>
      <div class="slds-modal__footer" id="modal-footer">
        <button class="slds-button slds-button--neutral modal-action" data-modal-target = "cancel-modal">Cancel</button>
        <button class="slds-button slds-button--neutral slds-button--brand modal-action" data-modal-target = "save-modal">Save</button>
      </div>
    </div>
  </div>
  <div class="slds-modal-backdrop slds-modal-backdrop--open"></div>
</div>

